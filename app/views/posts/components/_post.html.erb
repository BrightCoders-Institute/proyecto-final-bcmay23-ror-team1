<div class="post">
  <div class="post-header">
    <div class="post-avatar">
      <strong><%= post.user.name %></strong> 
      <% if post.user.avatar %>
      <% end %>
    </div>
    <div class="post-meta">
      @<%= post.user.username %>
    </div>
  </div>
  <div class="post-content">
    <p><%= post.content %></p>
  </div>


  <div class="post-actions post-meta">
    <%= post.created_at.strftime("%-I:%M %p Â· %-d %b. %Y") %>
  </div>

  <hr />

  <div class="post-actions">
    <a href="#">Like</a>
    <a href="#">Repost</a>
    <a href="#">Comment</a>
  </div>
  <div class="post-footer">
    <div class="post-footer-comment-count">
      <a href="#">5 Comments</a>
    </div>
  </div>
</div>
