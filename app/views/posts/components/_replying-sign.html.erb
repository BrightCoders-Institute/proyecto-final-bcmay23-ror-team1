<% if parent.present? && view == :index  %>
  <div class="post-replying-sign">Replying to
		<% parent_user = parent.user.present? ? parent.user : parent.deleted_user %>

		<%= link_to user_path(username: parent_user.username), 
			data: { turbo: false },
			class: "post-user-link" do %>
				@<%= parent_user.username %>
		<% end %>
	
  </div>
<% end %>
