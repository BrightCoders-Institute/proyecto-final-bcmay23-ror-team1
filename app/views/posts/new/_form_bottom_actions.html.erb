<div class="new-post-bottom">

  <% images_field_id = post.parent.present? ? :comment_images : :post_images %>

  <% images_field_id = :post_comment_images if defined?(is_current_post) && is_current_post %>

  <%= form.label :images, for: images_field_id do %>
    <%= icon("fa-regular", "image", class: "attach-image-icon") %>
  <% end %>

  <%= form.file_field(
    :images,
    id: images_field_id,
    multiple: true,
    data: { action: "form-new-post#previewImages" },
    hidden: true) %>

  <%= form.submit(
    :Post,
    autocomplete: "off",
    class: "blue-button",
    data: { 
      "form-new-post-target": "submit",
      action: "modal#closeModal"
    },
    disabled: true)%>

</div>
  
