
<%= turbo_frame_tag "shared_#{post.id}" do %>
  <% if post.shared_by?(current_user) %>
    <%= link_to icon('fa-solid', 'retweet'), shared_post_path(id: post.id), remote: true, data: { turbo_method: :delete } %>
  <% else %>
    <%= link_to icon('fa-solid', 'retweet') , shared_post_index_path(id: post.id), remote: true, data: { turbo_method: :post } %>
  <% end %>

  <strong>
    <%= post.shared_posts_relation.count %>
  </strong>
<% end %>
