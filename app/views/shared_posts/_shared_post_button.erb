<%= turbo_frame_tag "shared_#{post.id}" do %>

  <% if post.shared_by?(current_user) %>

    <%= link_to shared_post_path(id: post.id), remote: true,
      data: { turbo_method: :delete },
      class: 'action-button shared-button' do %>

      <%= icon('fa-solid', 'retweet') %>
      <%= post.shared_posts_relation.count %>
    <% end %>

  <% else %>
  
    <%= link_to shared_post_index_path(id: post.id), remote: true,
      data: { turbo_method: :post },
      class: 'action-button' do %>

      <%= icon('fa-solid', 'retweet') %>
      <%= post.shared_posts_relation.count %>
    <% end %>
      
  <% end %>

<% end %>
