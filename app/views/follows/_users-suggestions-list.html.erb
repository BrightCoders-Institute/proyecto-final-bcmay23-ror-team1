<div class="follow-suggestions">

  <% if @follow_suggestions.count.zero? %>
    <h2 class="title">You did it!</h2>
    <p class="title opaque-text">There's no one else to follow!</p>

  <% else %>

    <h2 class="title">Who to follow</h2>

    <% @follow_suggestions.each do |user| %>
      <%= render partial: 'follows/user-suggestion', locals: { user: user } %>
    <% end %>

  <% end %>

</div>
