<div class="signup-view-container">

  <div class="form">

    <%= link_to "X", root_path, class: "form-close-button" %>

    <h2 class="form-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
      <div class="field">
        <%= f.label :name %>
        <% if resource.errors[:name].present? %>
          <%= f.text_field :name, autofocus: true , class: "input-form input-error" %>
          <em class="error-message"><%= resource.errors[:name].first %></em>
        <% else %>
          <%= f.text_field :name, autofocus: true , class: "input-form input-neutral" %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :username %>
        <% if resource.errors[:username].present? %>
          <%= f.text_field :username , class: "input-form input-error" %>
          <em class="error-message"><%= resource.errors[:username].first %></em>
        <% else %>
          <%= f.text_field :username , class: "input-form input-neutral" %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <% if resource.errors[:email].present? %>
          <%= f.email_field :email, autocomplete: "email" , class: "input-form input-error" %>
          <em class="error-message"><%= resource.errors[:email].first %></em>
        <% else %>
          <%= f.email_field :email, autocomplete: "email" , class: "input-form input-neutral" %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password %>

        <% if resource.errors[:password].present? %>
          <%= f.password_field :password, autocomplete: "new-password" , class: "input-form input-error" %>
          <em class="error-message"><%= resource.errors[:password].first %></em>
        <% else %>

          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" , class: "input-form input-neutral" %>

        <% end %>

      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <% if resource.errors[:password_confirmation].present? %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "input-form input-error" %>
          <em class="error-message"><%= resource.errors[:password_confirmation].first %></em>
        <% else %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "input-form input-neutral" %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Next" , class: "submit-button" %>
      </div>
    <% end %>
  
  </div>
</div>
