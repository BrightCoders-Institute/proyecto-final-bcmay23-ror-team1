<%= turbo_frame_tag "follow_counters_#{user.id}" do %>
  <div class="follow-info mb-1">
    <%= link_to user_followings_path(username: user.username), data: {turbo: false} do %>
      <p>
        <span class="follow-info-number">
          <%= user.followings_number %>
        </span>
        <span class="follow-info-label">
          Following
        </span>
      </p>
    <% end %>
    <%= link_to user_followers_path(username: user.username), data: {turbo: false} do %>
      <p>
        <span class="follow-info-number">
          <%= user.followers_number %>
        </span>
        <span class="follow-info-label">
          Followers
        </span>
      </p>
    <% end %>
  </div>
<% end %>
