<!DOCTYPE html>
<html>
  <head>
    <title>Towgt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container-full">
      <div class="side-bar">
        <div class="content">
          <div class="side-bar-menu">
            <div class="logo mb-1">
              <h1>Towgt</h1>
            </div>
            <div class="side-bar-buttons">
              <%= render "posts/components/side-bar-buttons" %>
            </div>
          </div>
          <div class="side-bar-buttons">
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete },class: "icon-link" do %>
              <div>
                <i class="fas fa-arrow-right-from-bracket"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="container border-left">
        <div class="header-container ">
          <div class="header border-right border-bottom ">
            <%= render "components/header-title" %>
          </div>

          <% unless request.path == search_index_path %>
            <%= render "search/components/search-form" %>
          <% end %>
        </div>
        <div class="content-column">
          <div class="main-column border-right">
            <%= yield %>
          </div>

          <div class="secondary-column">
          
          </div>
        </div>

        <div class="mobile-side-bar">
          <div class="side-bar-buttons">
            <%= render "posts/components/side-bar-buttons" %>
           
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete },class: "icon-link" do %>
              <div>
                <i class="fas fa-arrow-right-from-bracket"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
    <%= turbo_frame_tag "comment" %>
  </body>
</html>
