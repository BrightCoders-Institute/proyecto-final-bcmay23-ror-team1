<!DOCTYPE html>
<html>
  <head>
    <title>Towgt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container-full">
      <div class="side-bar">
        <div class="content">
          <div class="menu">
            <div class="logo mb-1">
              <h1>Towgt</h1>
            </div>
            <ul>
              <%= link_to root_path, class: "icon-link" do %>
                <li>
                  <i class="fa-solid fa-house"></i>
                </li>
              <% end %>
              <%= link_to user_path(current_user), class: "icon-link" do %>
                <li>
                  <i class="fa-solid fa-user"></i>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="bottom-content">
            <ul class="">
              <%= link_to destroy_user_session_path, data: { turbo_method: :delete },class: "icon-link" do %>
                <li>
                  <i class="fas fa-arrow-right-from-bracket"></i>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="container border-left">
        <div class="header-container">
          <div class="header border-right border-bottom ">
            <!-- <h1>Home</h1> -->
            <%= render "components/header-title" %>
          </div>
          <div class="search">
            <div class="search-bar">
              <i class="fa-solid fa-magnifying-glass"></i>
              <input 
                type="search"
                placeholder="Search"
              >
            </div>
          </div>
        </div>
        <div class="content-column">
          <div class="main-column border-right">
            <%= yield %>
          </div>
          <div class="secondary-column">
            
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
