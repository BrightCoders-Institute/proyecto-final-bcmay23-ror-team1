<%= turbo_frame_tag post do %>

    <% if post.liked_by?(current_user) %>
        <%= link_to like_path(id: post.id), class: 'action-button post-liked', remote: true, data: { turbo_method: :delete } do %>
            <%= icon('fa-solid', 'heart') %>
            <%= post.likes.count %>
        <% end %>
    <% else %>
        <%= link_to likes_path(id: post.id), class: 'action-button post-like', remote: true, data: { turbo_method: :post } do %>
            <%= icon('fa-regular', 'heart') %>
            <%= post.likes.count %>
        <% end %>
  <% end %>
    
<% end %>
